{
  "manifest_version": 3,
  "name": "Laptop Sentry",
  "version": "1.0",
  "description": "Physical Intrusion Alarm & Local Evidence Capture.",
  "permissions": [
    "activeTab",
    "tabs",
    "idle",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
